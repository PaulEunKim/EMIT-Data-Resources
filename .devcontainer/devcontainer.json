// .devcontainer/devcontainer.json
{
  "name": "EMIT DevContainer",
  "build": {
    "dockerfile": "../Dockerfile"
  },

  "features": {},

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        // Use the venv-interpreter that Jupyter will register
        "python.defaultInterpreterPath": "/workspaces/EMIT-Data-Resources/.venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "tamasfe.even-better-toml"
      ]
    }
  },

  "runArgs": ["--memory=4g", "--memory-swap=4g"],

  "mounts": [
    "source=poetry_venv_cache,target=/workspaces/EMIT-Data-Resources/.venv,type=volume"
  ],

  "postCreateCommand": "chmod +x ./.devcontainer/setup.sh"
}
