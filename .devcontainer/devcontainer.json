{
  "name": "EMIT DevContainer",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "workspaceFolder": "/workspaces/EMIT-Data-Resources",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "tamasfe.even-better-toml",
        "vscodevim.vim"
      ] 
    }
  },
  "mounts": [
    "source=poetry_venv_cache,target=/workspaces/EMIT-Data-Resources/.venv,type=volume",
    "source=${localWorkspaceFolder}/../../hyperspectral-ch4-data,target=/workspaces/hyperspectral-ch4-data,type=bind"
    ],
  "postCreateCommand": "./.devcontainer/setup.sh"
}
